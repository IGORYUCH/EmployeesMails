<Window x:Class="EmployeesMailsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeesMailsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="556">
    <Grid>
        <TabControl>
            <TabItem Header="Письма сотрудников">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="EmployeeCombo"  HorizontalAlignment="Left" Margin="99,14,0,0" VerticalAlignment="Top" Width="228" SelectionChanged="EmployeeCombo_SelectionChanged"/>
                    <Label Content="Сотрудник" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Отдел" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="EmployeeDepartmentBox" HorizontalAlignment="Left" Height="23" Margin="99,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
                    <GroupBox Header="Письма сотрудника" Margin="0,84,0,0">
                        <Grid Margin="0,0,-2,-1">
                            <TabControl>
                                <TabItem x:Name="SentTab" Header="Отправленые">
                                    <Grid Background="#FFE5E5E5">
                                        <DataGrid x:Name="SentDataGrid">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Заголовок" IsReadOnly="True" Binding="{Binding Path=name}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Содержание" IsReadOnly="True" Binding="{Binding Path=content}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Отправитель" IsReadOnly="True" Binding="{Binding Path=sender}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Получатель" IsReadOnly="True" Binding="{Binding Path=receiver}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Дата" IsReadOnly="True" Binding="{Binding Path=date}" Width="*"></DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>
                                <TabItem x:Name="GotTab" Header="Полученые">
                                    <Grid Background="#FFE5E5E5">
                                        <DataGrid x:Name="GotDataGrid">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Заголовок" IsReadOnly="True" Binding="{Binding Path=name}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Содержание" IsReadOnly="True" Binding="{Binding Path=content}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Отправитель" IsReadOnly="True" Binding="{Binding Path=sender}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Получатель" IsReadOnly="True" Binding="{Binding Path=receiver}" Width="*"></DataGridTextColumn>
                                                <DataGridTextColumn Header="Дата" IsReadOnly="True" Binding="{Binding Path=date}" Width="*"></DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Удалить письмо">
                <Grid Background="#FFE5E5E5">
                    <Grid Background="#FFE5E5E5">
                        <Label Content="Отправитель" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top"/>
                        <Label Content="Получатель" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
                        <Label Content="Заголовок" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="22" Margin="106,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                        <Label Content="Содержание" HorizontalAlignment="Left" Margin="11,168,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="106,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                        <Button Content="Удалить" HorizontalAlignment="Left" Margin="106,250,0,0" VerticalAlignment="Top" Width="213" Height="38"/>
                        <ComboBox HorizontalAlignment="Left" Margin="106,13,0,0" VerticalAlignment="Top" Width="213"/>
                        <Label Content="Номер письма" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="22" Margin="106,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                        <TextBox HorizontalAlignment="Left" Height="22" Margin="106,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                        <Label Content="Дата" HorizontalAlignment="Left" Margin="11,206,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="106,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Добавить письмо">
                <Grid Background="#FFE5E5E5">
                    <ComboBox HorizontalAlignment="Left" Margin="104,14,0,0" VerticalAlignment="Top" Width="204"/>
                    <ComboBox HorizontalAlignment="Left" Margin="104,54,0,0" VerticalAlignment="Top" Width="204"/>
                    <Label Content="Отправитель" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Получатель" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
                    <Label Content="Заголовок" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Height="22" Margin="104,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
                    <Label Content="Содержание" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="104,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
                    <Button Content="Добавить" HorizontalAlignment="Left" Margin="104,178,0,0" VerticalAlignment="Top" Width="204" Height="40"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
